{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@models/*": ["models/*"],
      "@exceptions/*": ["exceptions/*"],
      "@enums/*": ["enums/*"],
      "@configs/*": ["configs/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
